<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.fxj.flashmemory.MainActivity" >

    <include layout="@layout/head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="25sp"
               
                android:textColor="#fff"
                android:text="初级：" />

            <TextView
                android:id="@+id/tv_primary_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:paddingLeft="20dp"
                android:textSize="25sp"
                 android:drawableLeft="@drawable/score_icon"
                android:textColor="#D9D919" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_middle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                 android:textSize="25sp"
                android:textColor="#fff"
                android:text="中级：" />

            <TextView
                android:id="@+id/tv_middle_score"
                android:layout_width="0dp"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:drawableLeft="@drawable/score_icon"
                android:text="0"
                   android:paddingLeft="20dp"
                android:textColor="#D9D919" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_high"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                 android:textSize="25sp"
                android:textColor="#fff"
                android:text="高级：" />

            <TextView
                android:id="@+id/tv_high_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                 android:drawableLeft="@drawable/score_icon"
                   android:paddingLeft="20dp"
                android:textSize="25sp"
                android:textColor="#D9D919" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_ultimate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                 android:textSize="25sp"
                 
                android:textColor="#fff"
                android:text="终级：" />

            <TextView
                android:id="@+id/tv_ultimate_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:drawableLeft="@drawable/score_icon"
                android:text="0"
                android:textSize="25sp"
                   android:paddingLeft="20dp"
                android:textColor="#D9D919" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                 android:textSize="25sp"
                android:textColor="#fff"
                android:text="自定义：" />

            <TextView
                android:id="@+id/tv_custom_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25sp"
                 android:drawableLeft="@drawable/score_icon"
                   android:paddingLeft="20dp"
                android:textColor="#D9D919" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_adventure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                 android:textSize="25sp"
                android:textColor="#fff"
                android:text="冒险模式：" />

            <TextView
                android:id="@+id/tv_adventure_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25sp"
                 android:drawableLeft="@drawable/score_icon"
                   android:paddingLeft="20dp"
                android:textColor="#D9D919" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>